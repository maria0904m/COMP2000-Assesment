<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Calendar-->
    <Button
        android:id="@+id/calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@android:color/white" />

    <!-- Notification button -->
    <Button
        android:id="@+id/notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@android:color/white" />

    <!-- Settings button-->
    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@android:color/white" />

    <!-- Welcome message-->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:text="Hi, Admin"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Scrollable employee list -->
    <ScrollView
        android:id="@+id/employee_list_scrollview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/welcome_message"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/employee_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Employee  1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/employee_item_bg">

                <!-- Employee name -->
                <TextView
                    android:id="@+id/employee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employee 1"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="4dp" />

                <!-- View icon -->
                <ImageView
                    android:id="@+id/view_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_view"
                    android:contentDescription="View Employee"
                    android:layout_marginEnd="16dp" />

                <!-- Delete icon -->
                <ImageView
                    android:id="@+id/delete_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete Employee" />
            </LinearLayout>

            <!-- Employee 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/employee_item_bg">

                <!-- Employee name -->
                <TextView
                    android:id="@+id/employee_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employee 2"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="4dp" />

                <!-- View icon -->
                <ImageView
                    android:id="@+id/view_icon_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_view"
                    android:contentDescription="View Employee"
                    android:layout_marginEnd="16dp" />

                <!-- Delete icon -->
                <ImageView
                    android:id="@+id/delete_icon_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete Employee" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Holiday requests section -->
    <LinearLayout
        android:id="@+id/holiday_requests_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employee_list_scrollview"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Holiday requests buttom -->
        <Button
            android:id="@+id/holiday_requests_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Holiday Requests"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:padding="16dp" />

        <!-- Add employee -->
        <Button
            android:id="@+id/add_employee_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Employee"
            android:textSize="18sp"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Bottom bar -->
    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Back button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Sign out-->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
