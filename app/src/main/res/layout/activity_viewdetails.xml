<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Calendar button -->
        <Button
            android:id="@+id/calendar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calendar"
            android:background="#FFFFFF"
            android:layout_alignParentStart="true" />

        <!-- Notification button -->
        <Button
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true" />

        <!-- Settings button -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:background="#FFFFFF"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Page title -->
    <TextView
        android:id="@+id/title_your_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="20dp">

        <!-- First Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name_eg1"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000" />

        <!-- Last Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name_eg1"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000" />

        <!-- Date of birth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date_eg1"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000" />

        <!-- role -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role_eg1"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date_eg1"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- Go to Main -->
        <Button
            android:id="@+id/go_to_main_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/go_to_main"
            android:background="#FFFFFF" />

        <!-- Edit details button  -->
        <Button
            android:id="@+id/edit_details_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_your_details"
            android:background="#FFFFFF" />
    </LinearLayout>

    <!-- Bottom bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <!-- Back button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Sign out -->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
