<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Top bar with calendar, notification, and settings  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Calendar button -->
        <Button
            android:id="@+id/calendar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calendar"
            android:background="#FFFFFF"
            android:layout_alignParentStart="true" />

        <!-- Notification button  -->
        <Button
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true" />

        <!-- Settings button  -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:background="#FFFFFF"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/title_request_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Holiday"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:padding="8dp" />

    <!-- Form container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Start date box-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/start_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter start date"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- End date box -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/end_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter end date"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- How Many Days? Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How Many Days"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/num_days_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter number of days"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Notes field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/notes_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter any notes"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Submit nutton -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <!-- Bottom bar with buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- back arrow button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Sign Out -->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>

