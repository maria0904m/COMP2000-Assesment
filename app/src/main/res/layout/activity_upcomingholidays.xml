<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Top bar with Calendar, Notification, and Settings buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Calendar button (Top left) -->
        <Button
            android:id="@+id/calendar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:background="#FFFFFF"
            android:layout_alignParentStart="true" />

        <!-- Notification button (Top center) -->
        <Button
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true" />

        <!-- Settings button (Top right) -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:background="#FFFFFF"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title_upcoming_holidays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Holidays"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:textColor="#000000" />

    <!-- Scrollable Container for Holiday Entries -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example Entry 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/start_date_display_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Date: 01/01/2024"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/end_date_display_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End Date: 01/05/2024"
                    android:background="#FFFFFF"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Example Entry 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/start_date_display_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Date: 01/06/2024"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/end_date_display_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End Date: 01/10/2024"
                    android:background="#FFFFFF"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Add more entries here as needed for upcoming holidays -->

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar with Back and Sign Out buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button (Bottom Left) -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Sign Out Button (Bottom Right) -->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
