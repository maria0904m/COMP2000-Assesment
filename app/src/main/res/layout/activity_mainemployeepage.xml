<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Calendar-->
    <Button
        android:id="@+id/calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calendar"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@android:color/white" />

    <!-- Notification button -->
    <Button
        android:id="@+id/notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notifications"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@android:color/white" />

    <!-- Settings button-->
    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@android:color/white" />

    <!-- Welcome message-->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:text="Hi, Employee"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Scrollable sections -->
    <ScrollView
        android:id="@+id/employee_sections_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_message"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Request Holiday Button -->
            <Button
                android:id="@+id/request_holiday_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request holiday"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black" />

            <!-- View Remaining Holidays Button -->
            <Button
                android:id="@+id/view_remaining_holidays_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View remaining holidays"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black" />

            <!-- View/Edit Details Button -->
            <Button
                android:id="@+id/view_edit_details_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View/Edit details"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar -->
    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Back button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Sign out button-->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>

